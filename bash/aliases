# misc
alias dotfiles='cd ~/bin/dotfiles/'
alias editdotfiles='subl ~/bin/dotfiles/'
alias ls='ls -la'

# location shortcuts
alias sites='cd ~/sites/'

# rails
alias migrate='rake db:migrate; rake db:test:prepare'
alias routes='rake routes'

# git
alias ga='git add --all; git status;'
alias gc='git commit -am '
alias gco='git checkout'
alias gb='git branch --column'
alias gs='git status'
alias push='git push'
alias pull='git pull'
alias log='git log --oneline'
alias uncommit='git reset --soft HEAD^'
alias recommit='git add --all; git commit -c ORIG_HEAD'
alias show='git show --pretty="format:" --name-only'
alias gst='git stash'
alias gd='git diff --cached'
