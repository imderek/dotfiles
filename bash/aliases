alias editdotfiles='mate ~/bin/dotfiles/'
alias ls='ls -la'

# location shortcuts
alias gems='cd ~/.rvm/gems/ruby-1.9.2-p0/gems/'
alias web='cd /library/webserver/documents/'
alias sites='cd ~/sites/'
alias marlytics='cd ~/sites/marlytics/'

# rails
alias resetdb='rake db:drop; rake db:create; rake db:migrate; rake db:test:prepare; rake db:seed; rake db:development:sample_data --trace; rake layouts:build --trace;'
alias migrate='rake db:migrate; rake db:test:prepare'
alias rollback='rake db:rollback'
alias routes='rake routes'

